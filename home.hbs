{{!< default }}
    
<section class="feature feature-home" style="background-image: url({{ @blog.cover }});">
  <div class="overlay"></div>
  <div class="grid">
    <div class="grid-row">
      <div class="f-1">
        <div class="feature-logo"></div>
        <section class="feature-text">
          <span class="line1">HISTORY</span>
          <span class="line2">more interesting</span>
          <span class="line3">than fiction</span>
        </section>
      </div>
    </div>
  </div>
  <div class="feature-caption">Boticelli's "The birth of Venus", 1445-1510 AD</div>
</section>

<div class="content">      
  <div class="grid">
    <div class="grid-row">
    {{#foreach posts}}
      <div class="f-1-3">
        {{> post_tile }}
      </div>
    {{/foreach}}
    </div>
  </div>
</div>